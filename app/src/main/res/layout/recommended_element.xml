<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#494545"
    android:layout_margin="8dp"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/course_shape"
        android:elevation="4dp"
        android:id="@+id/back"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/img1"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-condensed"
                android:text="Site Hosted"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/img2"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-condensed"
                android:text="Site Hosted"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/img3"
                android:layout_marginLeft="55dp"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-condensed"
                android:text="Site Hosted"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/site"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="Site Hosted"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="2dp"
                android:textSize="15sp"
                />
        />
        <FrameLayout
            android:layout_width="25dp"
            android:background="@drawable/course_shape_random"
            android:elevation="5dp"
            android:id="@+id/share"
            android:layout_marginLeft="25dp"
            android:layout_gravity="end"
            android:layout_height="25dp">
        <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="Site Hosted"
                android:src="@drawable/share"
                android:textSize="15sp"
                />
            </FrameLayout>
<FrameLayout
    android:layout_width="25dp"
    android:background="@drawable/course_shape_random"
    android:elevation="5dp"
    android:layout_marginRight="31dp"
    android:layout_gravity="end"
    android:id="@+id/link"
    android:layout_height="25dp">
    <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="Site Hosted"
                android:elevation="5dp"
                android:src="@drawable/externala"
                android:textSize="15sp"
                />
</FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Course By :"/>

        </FrameLayout>

        <TextView
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#b7292727"
            android:textSize="27sp"
            android:background="#494545"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:layout_marginTop="6dp"
            android:text="Course Name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#b7292727"
            android:textSize="27sp"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:id="@+id/course"
            android:layout_marginTop="6dp"
            android:text="Course Name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#b7080808"
            android:textSize="12sp"
            android:background="#fff"
            android:textAlignment="center"
            android:id="@+id/course_info"
            android:textStyle="italic"
            android:layout_marginTop="6dp"
            android:text="Course Info"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<FrameLayout

    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dp"
        android:src="@drawable/rating"
        android:layout_marginRight="23dp"
        android:layout_gravity="center"
        android:layout_height="30dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginLeft="7dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:layout_marginLeft="9dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:text="Rating"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="1.6dp"
            android:textColor="#dfce17"
            android:textSize="15sp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star"
        android:layout_marginLeft="0dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:text="&#9733;"
        android:layout_marginBottom="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="1.6dp"
        android:textColor="#dfce17"
        android:textSize="15sp"
        />
</LinearLayout>
</FrameLayout>

<FrameLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dp"
        android:src="@drawable/notes"
        android:layout_marginTop="0.5dp"
        android:layout_gravity="center"
        android:layout_marginRight="23dp"
        android:layout_height="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:layout_marginLeft="16dp"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="Price"
            android:textColor="#d13434"
            android:textSize="15sp"
            />



</FrameLayout>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/height"
        />
</LinearLayout>