<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.sanyogghosh.coursify.Introduction">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0fafb4" />

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context="com.example.sanyogghosh.coursify.Introduction">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0fafb4" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coursify"
        android:id="@+id/coursify"
        android:textColor="#d2ffffff"
        android:fontFamily="monospace"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:src="@drawable/mainicon"/>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=". . .your course kiosk"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:fontFamily="monospace"
        android:id="@+id/line"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="12sp"
        android:textStyle="bold"
        />

</FrameLayout>
</FrameLayout>